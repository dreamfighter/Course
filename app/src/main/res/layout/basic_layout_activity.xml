    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:id="@+id/layout_group1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/butbut1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Butbut1"/>
            <Button
                android:id="@+id/butbut2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/butbut1"
                android:text="Butbut2"/>
        </LinearLayout>
        <Button
            android:id="@+id/butbut3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/layout_group1"
            android:layout_alignBottom="@+id/layout_group1"
            android:text="Butbut3"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/butbut3"
            android:text="Butbut4"/>
    </RelativeLayout>

</LinearLayout>
